{% extends 'base.html.twig' %}

{% block body %}
    <h1>Exportschedule</h1>
<div class="container">
    <table class="table table-striped">
        <tbody>
          <tr>
              <th>Grabber</th>
              <td>{{ exportschedule.Grabber }}</td>
          </tr>
            <tr>
                <th>Weekday</th>
                <td>{{ exportschedule.weekday }}</td>
            </tr>
            <tr>
                <th>Hour</th>
                <td>{{ exportschedule.hour }}</td>
            </tr>
            <tr>
                <th>Disabled</th>
                <td>{% if exportschedule.disabled %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Importmail</th>
                <td>{{ exportschedule.importmail }}</td>
            </tr>

        </tbody>
    </table>

    <ul class="list-inline">

        <li>
            <a href="{{ path('exportschedule_edit', { 'id': exportschedule.id })}}" class="btn btn-info" role="button">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        <li>
            <a href="{{ path('exportschedule_index') }}">Back to the list</a>
        </li>
    </ul>
  </div>
{% endblock %}
