{% extends 'base.html.twig' %}

{% block body %}
    <h1>Status</h1>

    <table>
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ status.name }}</td>
            </tr>
            <tr>
                <th>Statuscode</th>
                <td>{{ status.statusCode }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('status_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('status_edit', { 'id': status.statusCode }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
