{% extends 'base.html.twig' %}

{% block body %}
    <h1>Grabdata</h1>

    <table>
        <tbody>
            <tr>
                <th>Metertime</th>
                <td>{% if grabdatum.metertime %}{{ grabdatum.metertime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Metervalue</th>
                <td>{{ grabdatum.metervalue }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ grabdatum.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('grabdata_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('grabdata_edit', { 'id': grabdatum.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
